{% set renderBackButton = flow.getCurrentStepNumber() in (flow.getFirstStepNumber() + 1) .. flow.getLastStepNumber() %}
<div id="buttons">
    <div id="insidebuttonwrapper" class="uk-button-group">
{%- if flow.getCurrentStepNumber() == 1 -%}
        <button class="uk-button submit nextbutt"> {{ 'form.gotonextstep'|trans({}, 'FOSUserBundle') }} </button>
{%- elseif flow.getCurrentStepNumber() < flow.getLastStepNumber() -%}
        <button class="uk-button submit nextbutt twobuttnext">{{ 'form.gotonextstep'|trans({}, 'FOSUserBundle') }}</button>
{%- else -%}
        <button class="uk-button submit nextbutt twobuttnext">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
{%- endif -%}

{% if renderBackButton %}
        <button type="submit" class="uk-button nextbutt backbutt" id="backbutton" name = "{{ flow.getFormTransitionKey() }}" value="back" formnovalidate="formnovalidate">
            {{- 'form.back' | trans({}, 'FOSUserBundle') -}}
        </button>
{% endif %}

    </div>
</div>