{% extends "FOSUserBundle::layout.html.twig" %}
{% block theme 'register' %}
{% block fos_user_content %}

	<div class="wrapper-content">
		<div class="content register checkmail">
			<div class="uk-width-3-4 float_left">
				<h3>Please check your email and your address! </h3>
				<p>A comfirmation email has been sent to you, it may take a few minutes. </p>
				<p>Follow the directions in the email to comfirm and complete your accout. </p>
			</div>
			<div class="float_right uk-width-1-4">
				<div><a href="#">Didn't get your verification email?</a></div>
				<div><a href="#">Used the wrong email address?</a></div>
			</div>
			<div class="clear"></div>

		</div>
		<div class="content usedemail">
		<!--You have used email: <a href="#">afterburn2014@gmail.com</a--> 
		{{ 'registration.check_email'|trans({'%email%': user.email}, 'FOSUserBundle') }}
		</div>

	</div>

{% endblock fos_user_content %}
