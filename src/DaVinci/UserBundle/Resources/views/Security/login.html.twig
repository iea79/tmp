{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% include 'DaVinciTaxiBundle::breadcrumbs.html.twig' %}
<div class="banner"><a href="#"><img src="{{ asset('bundles/davincitaxi/images/banner.jpg') }}" alt="{{ 'select the country and order a taxi at your price'|trans}}" /></a></div>

<div class="authorizat">
