        <h3>{{ 'Login or Register'|trans}}</h3>

        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.emailmobile'|trans }}" />
            <input type="password" id="password" name="_password" required="required" placeholder ="{{ 'security.login.password'|trans }}" />
            <div class="clear"></div>
            <p class="blue"><a href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot your password?'|trans }}</a></p>
            <input class="nextbutt" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            <!--/td>
            <th>or</th>
            <td-->
            <input type="button" class="float_left nextbutt btn-red" onclick="location.href = '{{ path("fos_user_registration_register") }}';" value="Sign Up" />
