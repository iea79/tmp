{% extends 'DaVinciTaxiBundle::base.html.twig' %}
{% block title %}
    {% include 'DaVinciTaxiBundle::banner.html.twig' %}
{% endblock%}
{% block body %}
{# Price block #}
	<div class="price">
		<p>{{'Subtotal:'|trans}} <span>$5.00</span></p>
		<p>{{'Commission services:'|trans}} <span>$0.10</span></p>
		<p>0%VAT: <span>$0.00</span></p>
		<h2>{{'Total cost:'|trans}} <span>$5.10</span></h2>
	</div>
{# Payment block #}						
	<div class="payment home">
		<div class="payment-swicher steps-1-2-3">
			<ul class="chois" data-uk-tab="{connect:'#sale_steps'}">
	            <li class="first uk-active">
	                <a href="#">
	                    <div class="arrow_box">
	                        <span class="hide"> <span class="exclude">{{'Payment'|trans}} </span>{{'method'|trans}}</span>
	                    </div>
	                    <span class="arrow"></span>
	                    <span class="middle"></span>
	                </a>
	            </li>
	            <li class="other second">
	                <a href="#">
	                    <div class="arrow_box">
	                        <span class="hide"> <span class="exclude">{{'Payment'|trans}}  </span>info</span>
	                    </div>
	                    <span class="arrow"> </span>
	                    <span class="middle"> </span>
	                </a>
	                <span class="back"></span>
	            </li>
	            <li class="last">
	                <a href="#">
	                    <div class="arrow_box">
	                        <span class="hide"> {{'Confirm'|trans}} <span class="exclude"></span></span>
	                    </div>
	                    <span class="arrow"></span>
	                </a>
	                <span class="back"></span>
	            </li>
			</ul>
		</div>
	
		<div id="sale_steps" class="uk-switcher ">
	{# Payment step 1 #}
			<div class="uk-active">
	
	{# Payment method #}
				<div class="pay-balance">
					<h4>{{'TMP payments:'|trans}}</h4>
					<div class="private">
						<input type="radio" name="tmp_pay" id="" checked> {{'Private Balance'|trans}}<span class="uk-icon-question-circle" data-uk-tooltip="{pos:'right'}" title="{{'Private Balance'|trans}}"></span>
					</div>
					<div class="business">
						<input type="radio" name="tmp_pay" id=""> {{'Business Balance'|trans}} <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'right'}" title="{{'Business Balance'|trans}}"></span>
					</div>
				</div>
	
	{# Card payments #}
				<div class="card-pay">
					<h4>{{'Card payments:'|trans}}</h4>
					<div class="uk-grid uk-grid-small">
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="card_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/visa.png') }}" alt="">
							<span>Visa</span>
						</div>
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="card_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/mcard.png') }}" alt="">
							<span>Master Card</span>
						</div>
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="card_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/dclub.png') }}" alt="">
							<span>Diners Club</span>
						</div>
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="card_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/discover.png') }}" alt="">
							<span>Discover</span>
						</div>
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="card_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/amerexp.png') }}" alt="">
							<span>American Express</span>
						</div>
					</div>
				</div>
	
	{# I payments #}
				<div class="i-pay">
					<h4>{{'I payments:'|trans}}</h4>
					<div class="uk-grid uk-grid-small">
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="i_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/paypal.png') }}" alt="">
							<span>PayPal</span>
						</div>
						<div class="uk-panel uk-width-medium-1-5 uk-width-small-1-3 uk-width-1-2">
							<input type="radio" name="i_pay" id="">
							<img src="{{ asset('bundles/davincitaxi/images/skrill.png') }}" alt="">
							<span>Skrill</span>
						</div>
					</div>
				</div>
				<button class="uk-button uk-button-success uk-width-1-1" type="">{{'NEXT'|trans}}</button>
			</div>
		</div>
	</div>
{% endblock %}	