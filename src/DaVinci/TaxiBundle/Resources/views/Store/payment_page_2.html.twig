{# Payment step 2 #}
<div class="addcard">
	{% if paymentMethod == 'CreditCardPaymentMethod' %}
		<h3>{{'Пополнение счета с помощью'|trans}} VISA</h3>
    	<div class="uk-form-row">
	    	{{ form_label(form.paymentMethod.cardNumber, 'Card number:') }}
	    	<div class="uk-form-controls">
	            {{ form_widget(form.paymentMethod.cardNumber) }}
	            {{ form_errors(form.paymentMethod.cardNumber, {'attr': {'class': 'uk-icon-question-circle'}}) }}
	        </div>
	    </div>
	    <div class="uk-form-row">
	        {{ form_label(form.paymentMethod.company, 'Company name:') }}
	    	<div class="uk-form-controls">
	            {{ form_widget(form.paymentMethod.company) }}
	            {{ form_errors(form.paymentMethod.company, {'attr': {'class': 'uk-icon-question-circle'}}) }}
	        </div>
	    </div>
	    <div class="uk-form-row">
	        <label class="uk-form-label" for="">{{'First name:'|trans}}</label>
	        <div class="uk-form-controls">
	            <input type="text" id="" placeholder="">
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row">
	        <label class="uk-form-label" for="">{{'Last name:'|trans}}</label>
	        <div class="uk-form-controls">
	            <input type="text" id="" placeholder="">
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row">
	        <label class="uk-form-label" for="">{{'Card number:'|trans}}</label>
	        <div class="uk-form-controls">
	            <input type="text" id="" placeholder="">
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row month">
	        <label class="uk-form-label" for="">{{'Month:'|trans}}</label>
	        <div class="uk-form-controls">
	                <select name="" id="">
	                    <option value="">Не выбрано</option>
	                    <option value=""></option>
	                    <option value=""></option>
	                </select>
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row year">
	        <label class="uk-form-label" for="">{{'Year:'|trans}}</label>
	        <div class="uk-form-controls">
	                <select name="" id="">
	                    <option value="">Не выбрано</option>
	                    <option value=""></option>
	                    <option value=""></option>
	                </select>
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row cwcvc">
	        <label class="uk-form-label" for="">{{'CW/CVC:'|trans}}</label>
	        <div class="uk-form-controls">
	            <input type="text" id="" placeholder="">
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row amount">
	        <label class="uk-form-label" for="">{{'Amount:'|trans}}</label>
	        <div class="uk-form-controls">
	            <input type="text" id="" placeholder="">
	                <select name="" id="">
	                    <option value="">Не выбрано</option>
	                    <option value=""></option>
	                    <option value=""></option>
	                </select>
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
	    <div class="uk-form-row">
	        <label class="uk-form-label" for="">{{'Note:'|trans}}<span>({{'not necessarity'|trans}})</span></label>
	        <div class="uk-form-controls">
	            <input type="text" id="" placeholder="">
	            <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct information'|trans }}"></span>
	        </div>
	    </div>
    {% endif %}
</div>
		