{% if paymentMethod == 'CreditCard' %}
	<h3>{{'Credit Card transaction:'|trans}} {{ subType }}</h3>
{% elseif paymentMethod == 'PayPal' %}
	<h3>{{'PayPal transaction'|trans}} PayPal</h3>
{% endif %}	
<div class="uk-form-row">
	<div class="uk-form-label">{{ form_label(form.paymentMethod.firstname, 'First name:') }}<i class="uk-icon-asterisk"></i></div>
	<div class="uk-form-controls">
        {{ form_widget(form.paymentMethod.firstname) }}
        <span class="uk-icon-question-circle" data-uk-tooltip="{pos:'left'}" title="{{ 'Write correct First name'|trans }}"></span>
        <div class="errors">{{ form_errors(form.paymentMethod.firstname) }}</div>
    </div>
</div>
<div class="uk-form-row">
	<div class="uk-form-label">{{ form_label(form.paymentMethod.lastname, 'Last name:') }}<i class="uk-icon-asterisk"></i></div>
	<div class="uk-form-controls">
