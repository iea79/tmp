{% extends 'DaVinciTaxiBundle::base.html.twig' %}
{% block title %} {% endblock %}
{% block body %}

    {% include 'DaVinciTaxiBundle::banner.html.twig' %}
    <div class="home">
        <div class="tabtaxi">
            <ul class="uk-tab uk-tab-grid">
                <li class="uk-width-1-2 current blue-drive">
                    <a href="#" class="child"><span>{{ 'Book your trip'|trans }}</span></a>
                </li>
                <li class="uk-width-1-2 red-drive">
                    <a href="{{ url('main_driver') }}" class="child"><span>{{ 'Choose best passenger'|trans }}</span></a>
                </li>
            </ul>
        </div>
        <div class="steps-1-2-3">
            <ul class="chois" data-uk-tab="{connect:'#steps'}">
                <li class="first">
                    <a href="#">
                        <div class="arrow_box"><span class="on"><i class="uk-icon-check"></i></span><span class="hide"> <span class="exclude">Select </span>route</span>
						</div>
						<span class="arrow"></span>
						<span class="middle"></span>
                    </a>
W                </li>
                <li class="other second">
                    <a href="#">
                        <div class="arrow_box"><span class="on">2</span><span class="hide"> <span class="exclude">Select the type of </span>vehicle</span>
						</div>
						<span class="arrow"> </span>
						<span class="middle"> </span>
                    </a>
					<span class="back"></span>
                </li>
                <li class="last">
                    <a href="#">
                        <div class="arrow_box"><span class="on">3</span><span class="hide"> Select price <span class="exclude"></span></span>
                        </div>
						<span class="arrow"></span>
					</a>
					<span class="back"></span>
                </li>
            </ul>
            <div id="steps" class="uk-switcher">
            	<form method="post">
            		{{ form_errors(form) }}

				    {% if flow.getCurrentStepNumber() == 1 %}
				        <div>
				            {% include 'DaVinciTaxiBundle:Home:order_step_1.html.twig' %}
				        </div>
				    {% endif %}
            	</form>
            </div>
			{% include 'DaVinciTaxiBundle:Home:map_block.html.twig' %}
		<div class="clear"></div>
        </div>
        {% include 'DaVinciTaxiBundle:Home:filter_table.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
	{% javascripts filter='?requirejs' 
	'@DaVinciTaxiBundle/Resources/public/js/pages/main.js' 
	%}

    {{ require_js_initialize({ 'main' : asset_url })}}

    {% endjavascripts %}
{% endblock %}
