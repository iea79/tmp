<script>
    var mapPoints = [];
    {% for routePoint in passengerRequest.routePoints %}
        mapPoints.push('{{ routePoint.place }}');
    {% endfor %}    
</script>
<div class="disloc">
	<div id="calculate_route">
		<div id="route_result">
			<div>
				<i class="mp-icon-timer uk-text-danger"></i>
				<span id="duration_route">{% if passengerRequest.duration > 0 %}{{ passengerRequest.getFormattedDuration() }}{% else %}0{% endif %} mins</span>
			</div>
			<div>
				<i class="mp-icon-direction uk-text-danger"></i>
				<span id="distance_route">{% if passengerRequest.distance > 0 %}{{ passengerRequest.getFormattedDistance() }} km / {{ passengerRequest.getDistanceInMiles() }} mi{% else %}0 km / 0 mi{% endif %}</span>
			</div>
			{% if passengerRequest.tariff.price > 0 %}
				<div><i class="mp-icon-calculate uk-text-danger"></i><span id="price_route">{{ passengerRequest.tariff.price }} $</span></div>
			{% endif %}	
		</div>
	</div>
	<div id="map-canvas" style="height: 500px;"></div>
</div>
