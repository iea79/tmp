{% extends 'DaVinciTaxiBundle::base.html.twig' %}
{% block title %}TAXI MY PRICE {% endblock %}
{% block body %}

    {% include 'DaVinciTaxiBundle::banner.html.twig' %}
    <div  class="home">
        <div class="tabtaxi">
            <ul class="uk-tab uk-tab-grid">
                <li class="uk-width-1-2 current blue-drive">

                    <a href="#" class="child"><span>Passenger, book a ride at your price</span></a>


                </li>
                <li class="uk-width-1-2 red-drive">
                    <a href="{{ url('main_driver') }}" class="child"><span>Driver, take the best deal</span></a>

                </li>
            </ul>
        </div>
        <div class="steps-1-2-3">
            <ul class="tabs uk-tab  chois" data-uk-tab="{connect:'#steps'}">
                <li class="uk-width-1-3  first">
                    <a href="#">
                        <div class="arrow_box"><span class="on"><i class="uk-icon-check"></i></span><span class="hide"> Choose a route</span>
                        </div>
                    </a>
                </li>
                <li class="uk-width-1-3 other">
                    <a href="#">
                        <div class="arrow_box"><span class="on">2</span><span class="hide"> Choose the <span class="exclude">type of </span>vehicle</span>
                        </div>
                    </a>
                </li>
                <li class="uk-width-1-3 contact">
                    <a href="#">
                        <div class="arrow_box"><span class="on">3</span><span class="hide"> Start a trip</span>
                        </div>
                    </a>
                </li>
            </ul>
            <div id="steps" class="uk-switcher uk-margin">
                <li>
                    {% include 'DaVinciTaxiBundle:Home:order_step_1.html.twig' %}
                </li>
                <li>
                    {% include 'DaVinciTaxiBundle:Home:order_step_2.html.twig' %}
                </li>
                <li>
                    {% include 'DaVinciTaxiBundle:Home:order_step_3.html.twig' %}
                </li>
            </div>
        </div>
        {% include 'DaVinciTaxiBundle:Home:filter_table.html.twig' %}
    </div>
{% endblock %}

