{% extends 'DaVinciTaxiBundle::base.html.twig' %}

{% block body %}

<div  class="home exchange-filter-page">
	<div class="shadow-main whitebg">
		<div class="tabtaxi">
			<ul class="uk-tab uk-tab-grid">
				<li class="uk-width-1-2 red-drive">
					<a class="child"><span>{{'Book your trip'|trans}}</span></a>
					
				</li>
				<li class="uk-width-1-2 current blue-drive">
					<a class="child"><span>{{'Choose best passenger'|trans}}</span></a>
					
				</li>
			</ul>
		</div>
		<div class="message">
			<span class="uk-text-danger">{{ 'Внимание'|trans }}! </span>{{ 'Не забывайте подтвердит вашу готовность выполнить заказ'|trans }}!
		</div>
		<div class="filter content select-group">
			<h2 for="">{{'Search passenger'|trans}}<span class="utooltip" data-uk-tooltip="{pos:'right'}" title="" data-cached-title=""></span></h2>
				
			<form action="" class="uk-form uk-form-horizontal">
				<div class="uk-grid uk-grid-small">
					<div class="uk-panel uk-width-1-1 uk-width-medium-1-2 uk-width-large-1-2">
							<div class="uk-form-row">
								<label class="uk-form-label">{{'Class:'|trans}}</label>
								<div class="uk-form-controls">
	                                <select name="" placeholder="Не выбрано">
										<option>{{'Economy'|trans}}</option>
										<option>{{'Compact'|trans}}</option>
										<option>{{'Midsize'|trans}}</option>
										<option>{{'Standart'|trans}}</option>
										<option>{{'Full Size'|trans}}</option>
										<option>{{'Premium'|trans}}</option>
										<option>{{'Luxury'|trans}}</option>
										<option>{{'Other'|trans}}</option>
										<option>{{'Convertible'|trans}}</option>
										<option>{{'Van'|trans}}</option>
										<option>{{'SUV'|trans}}</option>
										<option>{{'Speciality'|trans}}</option>
										<option>{{'Pickup'|trans}}</option>
	                                </select>
	                            </div>
							</div>
							<div class="uk-form-row">
								<label class="uk-form-label">{{'Data/Time:'|trans}}</label>
								<div class="uk-form-controls">
									<div class="daterange">
										<div id="widget">
											<div id="widgetField" class="uk-form-icon uk-form-icon-flip">
												<input type="text" name="datarange" maxlength="23" value="" placeholder="02/12/14-26/12/14"/>
												<a href="#">&#58896;</a>
											</div>
											<div id="widgetCalendar">
											</div>
										</div>
									</div>
	                            </div>
							</div>
							<div class="uk-form-row">
								<label class="uk-form-label">{{'Route:'|trans}}</label>
								<div class="uk-form-controls">
	                                <div class="uk-form-icon uk-form-icon-flip">
									    <i class="mp-icon-nord-star"></i>
									    <input type="text" placeholder="for example, Moscow, Russia">
									</div>
	                            </div>
							</div>
					</div>
					<div class="uk-panel uk-width-1-1 uk-width-medium-1-2 uk-width-large-1-2">
							<div class="uk-form-row">
								<label class="uk-form-label">{{'Price:'|trans}}</label>
								<div class="uk-form-controls duble-shoice">
									<div class="uk-grid uk-grid-small">
										<div class="uk-panel">
											<label for="">{{'from'|trans}}</label>
			                                <select name="" placeholder="Не выбрано">
			                                	<option>$0</option>
			                                	<option>$10</option>
			                                	<option>$20</option>
			                                </select>
			                            </div>
										<div class="uk-panel">
											<label for="">{{'to'|trans}}</label>
			                                <select name="" placeholder="Не выбрано">
			                                	<option value="0">$0</option>
			                                	<option value="10">$10</option>
			                                	<option value="20">$20</option>
			                                </select>
			                            </div>
		                            </div>
	                            </div>
							</div>
							<div class="uk-form-row">
								<label class="uk-form-label">{{'Payment method:'|trans}}</label>
								<div class="uk-form-controls">
									<select name="" placeholder="escro">
										<option value="escro">{{'escro'|trans}}</option>
										<option value="cash">{{'cash'|trans}}</option>}
									</select>
	                            </div>
							</div>
							<div class="uk-form-row">
								<label class="uk-form-label">{{'Trust:'|trans}}</label>
								<div class="uk-form-controls">
									<select class="iconed-drop">
										<option value="1">All</option>
										<option value="2">&#58901;</option>
										<option value="3">&#58901; &#58901;</option>
										<option value="4">&#58900;</option>
									</select>
	                            </div>
							</div>
					</div>
	                <div class="uk-form-row">
						<button type="" class="uk-button uk-button-success">{{'Show me'|trans}}</button>
						<button type="" class="uk-button uk-button-warning">{{'Reset'|trans}}</button>
					</div>
				</div>
			</form>
		</div>
	</div>	



	{% include 'DaVinciTaxiBundle:Home:filter_table.html.twig' %}
</div>

{% endblock %}

{% block javascripts %}
 {% javascripts filter='?requirejs'
    '@DaVinciTaxiBundle/Resources/public/js/pages/main.js'
    %}
    {# actually we need to create different js file for that page #}
    
    {{ require_js_initialize({ 'main' : asset_url })}}

    {% endjavascripts %}
{% endblock %}