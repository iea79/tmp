<div id="content">
	<div class="content-block taxidriver">
		<form action="{{ url('main_driver') }}" method="get">
			<fieldset>
				<ul class="tabs">  
					<li class="general"><a class="arrow_box" href="{{ url('register') }}"><span><img src="{{ asset('bundles/davincitaxi/images/kr.png') }}" alt="" /></span> General information</a></li>
					<li class="contact current"><div class="noarrow"><span>2</span> Contact information</div></li>
