                                <h6>Christmas bonuses and discounts for you!</h6>
                            </div>
                        </div>
                        {% for post in posts %}
                        <div class="uk-grid uk-grid-small wide">
                            <div class="uk-panel uk-width-1-3">
                                {% thumbnail post.media, 'preview' %}
                            </div>
                            <div class="uk-panel uk-width-2-3">
                                <a href="{{ path(post) }}">{{ post.title }}</a>
                                <h5>{{ post.date|date('F jS, Y') }}</h5>
                                <p>{{ post.bodyPreview }}</p>
                            </div>
                        </div>
                        {% else %}
                            <p class="empty">No posts found.</p>
