{% extends 'DaVinciTaxiBundle:Information:info.html.twig' %}

{% block blog_content %}
<div class="message">
    <span>{{ 'Just'|trans }}</span> {{ 'Do it!'|trans }}
    <div class="message-drop uk-float-right">
        <span>{{ 'LOCAL BLOGS'|trans }}</span>
    </div>
</div>
<div class="blog">
    <div class="buttom-swicher">
        <ul class="uk-width-1-1 uk-width-large-2-3" data-uk-switcher="{connect:'#blog'}">
            {% for b in blogs %}
                <li {% if blog.slug == b.slug %}class="uk-active"{% endif %}><a href="{{ path(b) }}">{{ blog.name }}</a></li>
            {% endfor %}
        </ul>
    </div>
        <ul id="blog" class="uk-switcher">
            <li class="uk-active">
                <div class="block-help">
                    <div class="help-content">
                        {# {{ blog.description|nl2br|raw }} #}
                        <div class="uk-grid uk-grid-small top">
                            <div class="uk-panel uk-width-1-3 tarif">
                                <img src="{{ asset('bundles/davincitaxi/images/blog1.jpg') }}" alt="">
                                <h6>Membership «Optimum» - the best choice at the best price!</h6>
                            </div>
                            <div class="uk-panel uk-width-1-3 tarif">
